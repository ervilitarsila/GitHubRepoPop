<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ic_computer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_pull_request"/>

        <TextView
            android:id="@+id/pullrequest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of Pull Request"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/ic_computer"
            app:layout_constraintTop_toTopOf="@+id/ic_computer"
            app:layout_constraintBottom_toBottomOf="@+id/ic_computer"
            android:layout_marginStart="10dp" />


        <TextView
            android:id="@+id/pullrequest_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Note List app based on MVVM architecture (ViewModel, LiveData, Coroutines, Room and Jetpack Compose)"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="32dp"
            android:maxLines="3"
            app:layout_constraintEnd_toStartOf="@id/card_owner_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_computer"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_owner_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toTopOf="@id/repository_name"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/owner_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/owner_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="username"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/card_owner_profile"
            app:layout_constraintStart_toStartOf="@id/card_owner_profile"
            app:layout_constraintTop_toBottomOf="@id/card_owner_profile" />

        <TextView
            android:id="@+id/owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Full Name"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/card_owner_profile"
            app:layout_constraintStart_toStartOf="@id/card_owner_profile"
            app:layout_constraintTop_toBottomOf="@id/owner_login" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>